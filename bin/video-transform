#!/usr/bin/env bash

name=`basename "$1"`

echo "--------> WEBM"
ffmpeg -i "$1" \
       -f webm \
       -vcodec libvpx-vp9 \
       -vb 1024k \
       "videos/$name.webm"

echo
echo "--------> MP4"
ffmpeg -i "$1".wmv \
       -vcodec libx264 \
       -f mp4 \
       -vb 1024k \
       -preset slow \
       "videos/$name.mp4"
